{
  "name": "fate-war-hub",
  "version": "1.1.0",  // Atualizado para refletir melhorias
  "description": "Hub para mesa Fate/Great War - Sistema seguro de gerenciamento de RPG",
  "main": "index.js",
  "scripts": {
    "dev": "vercel dev",  // Desenvolvimento local com Vercel
    "build": "echo 'Build não necessário para serverless'",  // Placeholder
    "start": "vercel --prod",  // Deploy para produção
    "test": "jest",  // Testes unitários
    "lint": "eslint api/**/*.js",  // Linting para qualidade de código
    "format": "prettier --write api/**/*.js",  // Formatação automática
    "security": "npm audit",  // Verificação de vulnerabilidades
    "postinstall": "npm run security"  // Executa auditoria após instalação
  },
  "dependencies": {
    "mongodb": "^4.17.2",  // Atualizado para versão estável
    "jsonwebtoken": "^9.0.2",  // Para autenticação JWT (futuro)
    "bcryptjs": "^2.4.3",  // Hashing seguro (se necessário)
    "helmet": "^7.1.0",  // Headers de segurança
    "express-rate-limit": "^7.1.5",  // Rate limiting
    "dotenv": "^16.3.1"  // Gerenciamento de env vars
  },
  "devDependencies": {
    "jest": "^29.7.0",  // Testes
    "eslint": "^8.56.0",  // Linting
    "prettier": "^3.1.1",  // Formatação
    "supertest": "^6.3.3"  // Testes de API
  },
  "engines": {
    "node": ">=18.0.0"  // Compatibilidade com Vercel
  },
  "keywords": ["fate", "rpg", "hub", "mongodb", "vercel"],
  "author": "Seu Nome",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/fate-war-hub"  // Substitua pelo seu repo
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/fate-war-hub/issues"
  },
  "homepage": "https://hub-fate-grandwar.vercel.app"
}
